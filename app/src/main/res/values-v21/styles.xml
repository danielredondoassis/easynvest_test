<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.FullScreen" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="TextLabel" parent="Widget.Design.TextInputLayout">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/form_textgray</item>
        <item name="android:textColorHighlight">@color/black</item>
        <item name="android:textSize">14dp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/form_textgray</item>
        <item name="colorControlNormal">@color/form_textgray</item>
        <item name="colorControlActivated">@color/black</item>
    </style>

    <style name="Base.Widget.Design.TabLayout" parent="android:Widget">
        <item name="tabBackground">@drawable/tab_selector</item>
        <item name="tabIndicatorHeight">2dp</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
</resources>